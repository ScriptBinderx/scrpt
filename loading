-- Create the ScreenGui
local gui = Instance.new("ScreenGui")
gui.ResetOnSpawn = false
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create the TextLabel
local label = Instance.new("TextLabel")
label.Size = UDim2.new(0.8, 0, 0.15, 0) -- width & height
label.Position = UDim2.new(0.1, 0, 0.425, 0) -- center
label.BackgroundTransparency = 1
label.TextScaled = true
label.Font = Enum.Font.SourceSansBold

-- Text appearance
label.Text = "ＭＡＫＥ ＳＵＲＥ ＴＨＥ ＳＥＲＶＥＲ ＩＳ ＮＯＴ ＦＵＬＬ ＴＯ ＬＯＡＤ ＴＨＥ ＳＣＲＩＰＴ"
label.TextColor3 = Color3.new(1, 1, 1) -- white text

-- Stroke
label.TextStrokeTransparency = 0
label.TextStrokeColor3 = Color3.new(0, 0, 0) -- black stroke

label.Parent = gui
